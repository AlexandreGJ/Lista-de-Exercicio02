package javaapplication51;
 
import java.util.Scanner;
 
public class JavaApplication51 {
 
    public static void main(String[] args) {
double tempF,tempC;
       Scanner input = new Scanner(System.in);
       System.out.println("Bem viando a previsão do tempo");
       System.out.println("Qual a temperatura atual em Fahrenheit ?");
       tempF=input.nextDouble();
       tempC=(tempF-32)/1.8;
       System.out.println("A temperatura atual em em graus centigrados é "+tempC);
    }
    
}
