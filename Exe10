package javaapplication51;
 
import java.util.Scanner;
 
public class JavaApplication51 {
 
    public static void main(String[] args) {
        int num1, num2, num3;
        double mediaHarmonica, mediaAritimetica, mediaGeometrica;
        System.out.println("Digite o primeiro numero");
        Scanner input = new Scanner(System.in);
        num1 = input.nextInt();
        System.out.println("Digite o segundo numero");
        num2 = input.nextInt();
        System.out.println("digite o terceiro numero");
        num3 = input.nextInt();
        mediaHarmonica = 3.0 / ((1.0 / num1) + (1.0 / num2) + (1.0 / num3));
        mediaAritimetica = (num1 + num2 + num3) / 3.0;
        mediaGeometrica = Math.cbrt(num1 * num2 * num3);
        System.out.println("A média geométrica é: " + mediaGeometrica);
        System.out.println("A média Aritimetica é: " + mediaAritimetica);
        System.out.println("A média Harmonica é: " + mediaHarmonica);
 
    }
 
}
