package javaapplication51;
 
import java.util.Scanner;
 
public class JavaApplication51 {
 
    public static void main(String[] args) {
        double horas_trabalhadas, Valor_recebido, salario_familia, salario_bruto;
        int numero_filhos;
 
        Scanner input = new Scanner(System.in);
 
        System.out.println("Digite o numero de horas trabalhadas no mês: ");
        horas_trabalhadas = input.nextDouble();
 
        System.out.println("Digite o valor recebido por horas de trabalho: ");
        Valor_recebido = input.nextDouble();
 
        System.out.println("Qual o valor do salário familia: ");
        salario_familia = input.nextDouble();
 
        System.out.println("Digite a quantidade de filhos menor que 14 anos: ");
        numero_filhos = input.nextInt();
 
        salario_bruto = horas_trabalhadas * Valor_recebido + salario_familia * numero_filhos;
 
        System.out.println("O salário bruto a ser recebido é: " + salario_bruto);
 
    }
 
}
